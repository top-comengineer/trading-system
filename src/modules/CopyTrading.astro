---
import { EarningIcon, DayIcon, MonthIcon, LastMonthIcon, } from "../utils/svg";
import Overview from "../components/copytrading/Overview.astro";
import Traders from "../components/copytrading/Traders.astro";
const tempArr = [
  {title:"Earning", price:345, icon: EarningIcon, background: "#1F2937"},
  {title:"Day", price:75, icon: DayIcon, background: "#1F2937"},
  {title:"Month", price:125, icon: MonthIcon, background:"#1F2937"},
  {title:"Last Month", price:45, icon: LastMonthIcon, background:"#1F2937"},
]
---
<div
	class="bg-gradient-to-r from-slate-100 to-slate-200 dark:from-slate-900 dark:to-slate-800 text-slate-800 dark:text-slate-100 mb-20 p-2 lg:p-8 shadow-xl shadow-slate-200 dark:shadow-slate-900"
>
  <div class="w-full bg-white rounded-lg shadow dark:bg-gray-800 p-4 md:p-3">
    <h2 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r to-emerald-300 from-sky-500">Copy Trading</h2>
  </div>
  <div class="mt-5 flex flex-wrap w-full justify-around">
    {tempArr.map(item=>(
      <div style={{backgroundColor:item.background}} class="relative flex justify-between w-1/5 p-6 bg-white border border-gray-200 rounded-lg shadow dark:border-gray-700 ">
        <div set:html={item.icon} />
        <div>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{item.price}$</h5>
          <p class="font-normal">{item.title}</p>  
        </div>
        
      </div>
    ))}
  </div>

  <div class="mb-4 mt-5 border-b border-gray-200 dark:border-gray-700">
    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
        <li class="mr-2" role="presentation">
            <button class="flex items-center p-4 border-b-2 rounded-t-lg text-[16px] font-bold" id="overview-tab" data-tabs-target="#overview" type="button" role="tab" aria-controls="overview" aria-selected="false">Overview</button>
        </li>
        <li class="mr-2" role="presentation">
            <button class="flex items-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 text-[16px] font-bold" id="trader-tab" data-tabs-target="#trader" type="button" role="tab" aria-controls="trader" aria-selected="false">Traders</button>
        </li>
    </ul>
  </div>
  <div id="myTabContent">
      <div class="hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="overview" role="tabpanel" aria-labelledby="overview-tab">
        <Overview/>
      </div>
      <div class="hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="trader" role="tabpanel" aria-labelledby="trader-tab">
        <Traders/>  
      </div>
  </div>
</div>